<%- include('../layouts/admin/header.ejs') -%>

  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-9">
                  <div class="d-flex align-items-center align-self-start">
                    <h3 class="mb-0"><%= totalUsers? totalUsers:0 %></h3>
                  </div>
                </div>
                <div class="col-3">
                </div>
              </div>
              <h6 class="text-muted font-weight-normal mt-3">Users</h6>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-9">
                  <div class="d-flex align-items-center align-self-start">
                    <h3 class="mb-0"><%= blockedUsers? blockedUsers:0 %></h3>
                  </div>
                </div>
                <div class="col-3">
                </div>
              </div>
              <h6 class="text-muted font-weight-normal mt-3">Blocked Users</h6>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-9">
                  <div class="d-flex align-items-center align-self-start">
                    <h3 class="mb-0"><%= returnedOrder? returnedOrder:0 %></h3>
                  </div>
                </div>
                <div class="col-3">
                </div>
              </div>
              <h6 class="text-muted font-weight-normal mt-3">Returned Order</h6>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-9">
                  <div class="d-flex align-items-center align-self-start">
                    <h3 class="mb-0"><%= cancelledOrder? cancelledOrder:0 %></h3>
                  </div>
                </div>
                <div class="col-3">
                </div>
              </div>
              <h6 class="text-muted font-weight-normal mt-3">Cancelled Order</h6>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body" id="chart1">
             
              <input type="hidden" value="<%= categories %>" id="categoriesapex">
              <input type="hidden" value="<%= seriesData %>" id="seriesdataapex">
            </div>
          </div>
        </div>
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body" id="chart2">
              <input type="hidden" value="<%= orderPayment %>" id="orderPayment">
              <input type="hidden" value="<%= paymentCount %>" id="paymentCount">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 grid-margin">
          <div class="card">
            <div class="card-body">
              <h5>Total Sale</h5>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h2 class="mb-0"><%= totalSale? totalSale:0 %></h2>
                  </div>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4 grid-margin">
          <div class="card">
            <div class="card-body">
              <h5>Total Orders</h5>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h2 class="mb-0"><%= totalOrders? totalOrders:0 %></h2>
                  </div>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4 grid-margin">
          <div class="card">
            <div class="card-body">
              <h5>Refund</h5>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h2 class="mb-0"><%= totalRefund? totalRefund:0 %></h2>                   
                  </div>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi-monitor text-success ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <footer class="footer">
      <div class="d-sm-flex justify-content-center justify-content-sm-between">
      </div>
    </footer>
    <!-- partial -->
  </div>
  <%- include('../layouts/admin/footer.ejs') -%>
    <script>
      let categories = JSON.parse(document.getElementById('categoriesapex').value);
      let seriesData = JSON.parse(document.getElementById('seriesdataapex').value);
      console.log(categories);
      console.log(seriesData);
      console.log(typeof (categories))
      var options = {
        series: [{
          name: "Desktops",
          data: seriesData
        }],
        chart: {
          height: 350,
          type: 'line',
          zoom: {
            enabled: false
          }
        },
        dataLabels: {
          enabled: false
        },
        stroke: {
          curve: 'straight'
        },
        title: {
          text: 'Sale by Month',
          align: 'left'
        },
        grid: {
          row: {
            colors: ['#f3f3f', 'transparent'],
            opacity: 0.5
          },
        },
        xaxis: {
          categories: categories
        },
      };

      var chart = new ApexCharts(document.querySelector("#chart1"), options);
      chart.render();

      let orderpayment = JSON.parse(document.getElementById('orderPayment').value);
      let paymentcount = JSON.parse(document.getElementById('paymentCount').value)

      var options = {
          series: paymentcount,
          chart: {
          width: 480,
          type: 'pie',
        },
        labels: orderpayment,
        
        responsive: [{
          breakpoint: 480,
          options: {
            chart: {
              width: 200
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
        };

        var chart = new ApexCharts(document.querySelector("#chart2"), options);
        chart.render();


    </script>