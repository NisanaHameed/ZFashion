  <div class="main-panel">

    <div class="row justify-content-end mt-5">
      <a href="/admin/loadAddproduct" class="btn btn-outline-primary mx-5">Add Product</a>
    </div>
    <div class="row mt-5">
      <div class="col-12 grid-margin">
        <div class="card" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);">
          <div class="card-body">
            <h4 class="card-title">Products</h4>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th> Products </th>
                    <th> Product name </th>
                    <th> Category </th>
                    <th> Price </th>
                    <th> Quantity </th>
                    <th> Offer </th>
                    <th> Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(products.length>0) { %>
                    <% for(let i=0;i<products.length;i++){ %>
                      <tr>
                        <td><img src="/userImages/<%= products[i].Image.image2 %>"> </td>
                        <td>
                          <%= products[i].product_name %>
                        </td>
                        <td>
                          <%= products[i].Category %>
                        </td>
                        <td>
                          <%= products[i].Price %>
                        </td>
                        <% if(products[i].Stock>0) { %>
                          <td>
                            <%= products[i].Stock %>
                          </td>
                          <% }else { %>
                            <td class="text-danger">No Stock</td>
                            <% } %>
                              <td>
                                <% if(products[i].Offer){ %>
                                  <%= products[i].Offer.Name %>
                                    <% } %>
                              </td>
                              <td>
                                <a class="mx-2" href="/admin/updateProduct/<%= products[i]._id %>"><img
                                    src="/user/img/edit_1160515.png" style="width: 1.6rem;height: 1.6rem;"></a>
                                <a class="mx-2" href="javascript:void(0)"
                                  onclick="confirmDelete('<%= products[i]._id %>')"><img
                                    src="/user/img/remove_7695661.png" style="width: 1.6rem;height: 1.6rem;"></a>
                              </td>
                      </tr>
                      <% } %>


                        <% } else { %>
                          <tr>
                            <td>Products not found</td>
                          </tr>
                          <% } %>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 text-center" id="pagination">
        <div class="product__pagination">
          <% for(let i=1; i<=pages;i++) { %>
            <% if( i==parseInt(pageNum) ) { %>
              <a class="active px-1" href="/admin/products/?page=<%= i %>">
                <%= i %>
              </a>
              <% } else { %>
                <a href="/admin/products/?page=<%= i %>">
                  <%= i %>
                </a>
                <% } %>
                  <% } %>
        </div>
      </div>
    </div>

  </div>
  <%- include('../layouts/admin/footer.ejs') -%>
    <script>
      function confirmDelete(productId) {
        swal({
          title: "Are you sure?",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes",
        }).then(function (result) {
          if (result.value) {
            window.location.href = `/admin/delete-product/${productId}`;
          }
        })
      }
    </script>