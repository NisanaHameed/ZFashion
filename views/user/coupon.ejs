              <p class="card-text">Expiry:<b><%= coupon[i].expiryDate.toLocaleDateString('en-US', { year:
                'numeric', month: 'short', day: '2-digit'
                }).replace(/\//g,Â '-') %></b></p>
            </div>
          </div>
    </div>
    <% } %>
   
</div>
<% }else { %> 
  <div class="mt-5">
  <h4 class="text-danger">No coupons available!!</h>
</div>
  <%} %>
</div>

</section>
