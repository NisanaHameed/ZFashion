<!-- Product Section Begin -->


<section class="product spad">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <!-- <li class="active" data-filter="*">Best Sellers</li> -->
                    <li data-filter=".new-arrivals">New Arrivals</li>
                    <!-- <li data-filter=".hot-sales">Hot Sales</li> -->
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            <% for(let i=0;i<product.length;i++){ %> 
            <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="/userImages/<%= product[i].Image.image1 %>">
                        
                        <ul class="product__hover">
                            <li><a href="#" onclick="addToWishlist('<%= product[i]._id %>')"><img src="/user/img/icon/heart.png" alt=""></a></li>
                            <li><a href="/productDetail/<%- product[i]._id %>"><img src="/user/img/icon/search.png" alt=""></a></li>
                        </ul>
                    </div>
                    <div>                        
                        <h6 class="mt-3"><%= product[i].product_name %></h6>
                        <h5 class="pt-2"><b> Rs <%= product[i].Price %></b></h5>   
                        <% if(product[i].Stock==0) { %>  
                            <span class="text-danger text-small">Out of Stock</span>
                            <% } %>
                        <!-- <h6><%= product[i].product_name %></h6>
                        <a href="#" class="add-cart" onclick="addtoCart('<%= product[i]._id %>')">+ Add To Cart</a>
                        <h5>Rs. <%= product[i].Price %></h5> -->
                       
                    </div>
                </div>
            </div>
            <% } %>

        </div>
    </div>
</section>
<!-- Product Section End -->

